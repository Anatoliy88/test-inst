.popup {
  visibility: hidden;
  opacity: 1;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.1);
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-show {
  visibility: visible;
  opacity: 1;
  z-index: 1000
}

.popup-container {
  position: relative;
  margin: auto;
  max-width: 550px;
  width: 100%;
  padding: 30px 0;
  background: #fff;
  text-align: center;
  border-radius: 5px;
}

.popup-show .popup-container {
  animation: bounceInDown 0.6s;
}

.popup-error .popup-container {
  animation: shake .6s;
}
.popup-close {
  position: absolute;
  right: 0;
  top: 0;
  // background: url("") 0 0 no-repeat;
  width: 39px;
  height: 39px;
  cursor: pointer;
}

.popup-box {
  padding 0 5%

  input,textarea {
    padding 5px
    margin 5px 0
    width 100%
  }
}
