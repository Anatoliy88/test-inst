.main-footer
  background: #2A2A2A
  background-size: cover
  color: #CCCCCC
  font-size: 0
  font-family: "PT Sans",sans-serif
  padding: 30px 0

.main-footer .container
  padding: 0 65px

.footer-logo,
.copyright,
.contacts-container
  display: inline-block
  vertical-align: middle
  width: 33.3%

.copyright
  text-align: center
  color: #FFFFFF
  font-size: 1rem

.contacts
  font-size: 1rem
  font-weight: 700
  color: #FFFFFF
  padding-left: 45%

.contacts h4
  text-transform: uppercase
  margin-top: 0
  margin-bottom: 10px

.contacts p
  margin: 0
