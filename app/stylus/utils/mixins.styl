clearfix() {
  &:after,
  &:before {
    content: ""
    display: table
    width: 100%
  }
  &:after {
    clear: both
  }
}
center() {
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
}
set-font-size(value) {
  font-size: value; /* add PX (or original value) as backup */

  if (value is inherit) {
    /* do nothing, "inherit" has no unit */
  } else {
    font-size: remify(value);
  }
}

remify(value) {
  u = unit(value);

  if (u is 'px') {
    return unit(value/16, 'rem');
  } else {
    return unit(value, u);
  }
}